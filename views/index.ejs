<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
    <title>Url_shortner</title>
</head>
<body style="background-color: #e3e7c3;">
    <div class="container">
        <h1 style="text-align: center;">Secured Url</h1>
    <form action="/shortUrls" method="post" class="from-inline my-4">
        <!-- <label for="fullUrl" class="sr-only">Url</label> -->
        <input required type="url" name="fullUrl" id="fullUrl" placeholder="Enter the URL..." class="form-control" >
        <button  class="btn btn-success" type="submit" style="margin-top: 8px; margin-left: 92%;">Shrink</button>
    </form>
    <h4 style="margin-bottom: 15px;">History</h4>
    <table class="table table-striped table-responsive">
        <thead>
            <tr>
                <th>Full URL</th>
                <th>Short URL</th>
                <th>Visits</th>
            </tr>
        </thead>
        <tbody>
            <% shortUrls.forEach(shortUrl => {%>
                <tr>
                    <td><a href="<%= shortUrl.full %>"><%= shortUrl.full %></a></td>
                    <td><a href="<%= shortUrl.short %>"><%= shortUrl.short %></a></td>
                    <td><%= shortUrl.clicks %></td>
                </tr>
            <%})%>
            
        </tbody>
    </table>
    </div>
</body>
</html>